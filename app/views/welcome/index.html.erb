             <a href="/jobs/new"  class="btn btn-primary " data-animation="animated fadeInRight">发布工作</a>
           </div>
         </div>
       </div>
     </div>
     <!-- End of Slide -->

     <!-- Second Slide -->
     <div class="item">

       <!-- Slide Background -->
       <img src="https://ww2.sinaimg.cn/large/006tNbRwgy1fca5s9o9a3j31kw11yhdt.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
       <div class="bs-slider-overlay"></div>
       <!-- Slide Text Layer -->
       <div class="slide-text slide_style_center">
         <h1 data-animation="animated flipInX">真24K Offer </h1>
         <p data-animation="animated lightSpeedIn">凭借自己的努力和天份也会变 Winner</p>
         <a href="/jobs"  class="btn btn-default btn-danger" data-animation="animated fadeInLeft">应聘工作</a>
         <a href="/jobs/new"  class="btn btn-primary btn-warning " data-animation="animated fadeInRight">发布工作</a>
       </div>
     </div>
     <!-- End of Slide -->

     <!-- Third Slide -->
     <div class="item">

         <!-- Slide Background -->
         <img src="https://ww1.sinaimg.cn/large/006tNbRwgy1fca5wbyxt7j31kw11ye5h.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
         <div class="bs-slider-overlay"></div>
         <!-- Slide Text Layer -->
         <div class="slide-text slide_style_center">
             <h1 data-animation="animated zoomInLeft">真24K Offer </h1>
             <p data-animation="animated fadeInRight">积累 + 耐心 = 成功 </p>
             <a href="/jobs"  class="btn btn-default btn-danger" data-animation="animated fadeInLeft">应聘工作</a>
             <a href="/jobs/new"  class="btn btn-primary " data-animation="animated fadeInRight">发布工作</a>
         </div>
     </div>
     <!-- End of Slide -->


   </div><!-- End of Wrapper For Slides -->

   <!-- Left Control -->
   <a class="left carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="prev">
       <span class="fa fa-angle-left" aria-hidden="true"></span>
       <span class="sr-only">Previous</span>
   </a>

   <!-- Right Control -->
   <a class="right carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="next">
       <span class="fa fa-angle-right" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
   </a>

 </div> <!-- End  bootstrap-touch-slider Slider -->
</div>


